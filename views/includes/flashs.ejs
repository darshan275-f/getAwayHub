<% if(success && success.length){ %>

    <div class="alert alert-success alert-dismissible" role="alert" style="height: 3.5rem;">
      
        <p><b> <%=success%></b></p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
     </div>
<%}%>

<% if(failure && failure.length){ %>

    <div class="alert alert-danger alert-dismissible" role="alert" style="height: 3.5rem;">
            <p><b> <%=failure%></b></p>
       
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
     </div>
<%}%>
